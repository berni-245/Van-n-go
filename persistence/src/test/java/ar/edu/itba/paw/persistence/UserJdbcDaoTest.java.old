package ar.edu.itba.paw.persistence;


import ar.edu.itba.paw.models.User;
import ar.edu.itba.paw.persistence.config.TestConfig;
import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.test.annotation.Rollback;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.jdbc.Sql;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;
import org.springframework.test.jdbc.JdbcTestUtils;
import org.springframework.transaction.annotation.Transactional;

import javax.sql.DataSource;

import java.util.Optional;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertTrue;

@Transactional
@Rollback
@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(classes = TestConfig.class)
@Sql(scripts = {
        "classpath:db_init.sql",
        "classpath:add_user_data.sql"
})
public class UserJdbcDaoTest {
    private static final String USERNAME = "Fletero";
    private static final String USERMAIL = "fletero@mail.com";
    private static final String USERPASSWORD = "fleteroPassword";
    private static final String USERNAME2 = "fletero";
    private static final String USERMAIL2 = "fletero@mail.com.ar";
    private static final String USERPASSWORD2 = "fleteroPassword";
    private static final String CLIENTUSERNAME = "cliente";
    private static final String CLIENTMAIL = "cliente@mail.com";
    private static final String CLIENTPASSWORD = "password";

    @Autowired
    private UserDao userDao;

    @Autowired
    private DataSource ds;

    private JdbcTemplate jdbcTemplate;

    @PersistenceContext
    private EntityManager em;

    @Before
    public void setUp() {
        jdbcTemplate = new JdbcTemplate(ds);
    }

    @Test
    public void testSuccessfulCreate(){
       int userId = userDao.create(USERNAME2,USERMAIL2,USERPASSWORD2);

       em.flush();

       assertEquals(1, JdbcTestUtils.countRowsInTableWhere(
               jdbcTemplate, "app_user",
               String.format("""
                       id = '%d' and username = '%s' and mail = '%s' and password = '%s'
                       """,userId,USERNAME2,USERMAIL2,USERPASSWORD2)
       ));
    }

    @Test
    public void testMailExist(){
        assertTrue(userDao.mailExists(USERMAIL));
    }

    @Test
    public void testUsernameExist(){
        assertTrue(userDao.usernameExists(USERNAME));
    }

    @Test
    public void testFindByUsernameClient(){
        Optional<? extends User> optionalUser = userDao.findByUsername(CLIENTUSERNAME);
        assertTrue(optionalUser.isPresent());
        User user = optionalUser.get();
        assertEquals(CLIENTUSERNAME,user.getUsername());
        assertEquals(CLIENTMAIL,user.getMail());
        assertEquals(CLIENTPASSWORD,user.getPassword());
    }

    @Test
    public void testFindByUsernameDriver(){
        Optional<? extends User> optionalUser = userDao.findByUsername(USERNAME);
        assertTrue(optionalUser.isPresent());
        User user = optionalUser.get();
        assertEquals(USERNAME,user.getUsername());
        assertEquals(USERMAIL,user.getMail());
        assertEquals(USERPASSWORD,user.getPassword());
    }

    @Test
    public void testUpdateMail(){
        userDao.updateMail(1,"nuevomail@gmail.com");
        assertEquals(1, JdbcTestUtils.countRowsInTableWhere(
                jdbcTemplate, "app_user",
                String.format("""
                       id = '%d' and username = '%s' and mail = '%s' and password = '%s'
                       """,1,USERNAME,"nuevomail@gmail.com",USERPASSWORD)));
    }

    @Test
    public void testUpdatePassword(){
        userDao.updatePassword(1,"prueba");
        assertEquals(1, JdbcTestUtils.countRowsInTableWhere(
                jdbcTemplate, "app_user",
                String.format("""
                       id = '%d' and username = '%s' and mail = '%s' and password = '%s'
                       """,1,USERNAME,USERMAIL,"prueba")));
    }

    @Test
    public void testUpdateUsername(){
        userDao.updateUsername(1,"prueba");
        assertEquals(1, JdbcTestUtils.countRowsInTableWhere(
                jdbcTemplate, "app_user",
                String.format("""
                       id = '%d' and username = '%s' and mail = '%s' and password = '%s'
                       """,1,"prueba",USERMAIL,USERPASSWORD)));
    }


}
